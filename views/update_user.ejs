<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

 <!-- Main Site -->
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
        <div class="filter">
            <a href="/"><i class="fas fa-angle-double-left"></i> Clientes </a>
        </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Atualizar cadastro</h2>
            <span class="text-light">Use o formulário para editar um cadastro</span>
        </div>
        
                <!-- form handling -->
                <form method="POST" id="update_user">
                    <div class="new_user">
                        <div class="form-group">
                            <label for="name" class="text-light">Nome</label>
                            <input type="hidden" name="id" value="<%= user._id %>">
                            <input type="text" name="name" value="<%= user.name %>" placeholder="">
                        </div>
                        <div class="form-group">
                         <label for="email" class="text-light">Email</label>
                         <input type="text" name="email" value="<%= user.email %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="cpf" class="text-light">CPF</label>
                         <input type="text" name="cpf" value="<%= user.cpf %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="telefone" class="text-light">Telefone</label>
                         <input type="text" name="telefone" value="<%= user.telefone %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="CEP" class="text-light">CEP</label>
                         <input type="text" name="cep" value="<%= user.cep %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="logadouro" class="text-light">Logadouro</label>
                         <input type="text" name="logadouro" value="<%= user.logadouro %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="numero" class="text-light">Número</label>
                         <input type="text" name="numero" value="<%= user.numero %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="bairro" class="text-light">Bairro</label>
                         <input type="text" name="bairro" value="<%= user.bairro %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="Cidade" class="text-light">Cidade</label>
                         <input type="text" name="cidade" value="<%= user.cidade %>" placeholder="">
                     </div>
                     <div class="form-group">
                         <label for="Estado" class="text-light">Estado</label>
                         <input type="text" name="estado" value="<%= user.estado %>" placeholder="">
                     </div>
                     
                     <div class="form-group">
                         <button type="submit" class="btn text-dark update">Salvar</button>
                     </div>
                     
                    </div>
                 </form>

    </div>
 </main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->